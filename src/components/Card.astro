---
import { IconClock4, IconPeople, IconPerson } from "@components/Icons";

const { image, title, slug, price, itineraries, jenistrip } = Astro.props;

const bucketUrl = "/images";
---

<div class="bg-white shadow-lg overflow-hidden rounded">
  <div class="relative overflow-hidden aspect-[5/4]">
    <img
      src={`${bucketUrl}${image}`}
      alt={`${title} main`}
      class="object-cover object-center hover:scale-105 transition-all duration-300 h-full w-full"
      loading="lazy"
    />
    <div class="absolute bottom-0 w-full">
      <div
        class="bg-amber-300 text-black px-2 py-1 rounded-l-sm font-bold w-fit ml-auto -bottom-2 relative shadow-md"
      >
        Rp.{" "}
        {`${Number(price[0]).toLocaleString("id-ID")}.000`}
      </div>
      <div class="p-3 bg-white">
        <p class="text-lg font-bold mb-2 leading-5">{title}</p>
        <div class="flex gap-x-2">
          <div class="flex items-center gap-x-1 text-sm">
            <IconClock4 />
            <span>
              {
                itineraries.length > 1
                  ? `${itineraries.length} Days`
                  : `${itineraries.length} Day`
              }
            </span>
          </div>
          <div class="flex items-center gap-x-1 text-sm">
            <span>
              {jenistrip === "Private" ? <IconPerson /> : <IconPeople />}
            </span>
            {jenistrip} Trip
          </div>

          <a
            href={`/paket/${slug}`}
            class="flex bg-deep-blue text-white hover:scale-105 hover:transition-all hover:duration-300 px-3 py-1 rounded-sm items-center font-medium ml-auto"
          >
            Details
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
